<Page
    x:Class="Pomodoro.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pomodoro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Center" Margin="0,656,0,0" VerticalAlignment="Top" Height="132" Width="305" />
        <TextBlock x:Name="textBlock" Text="{Binding TimerTextBlock, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Margin="0,297,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Page>
